{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ES2021"],
    "skipLibCheck": true,
    "allowJs": false,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "baseUrl": "."
  },
  "include": ["packages", "apps", "extension", "tests", "docs"]
}
