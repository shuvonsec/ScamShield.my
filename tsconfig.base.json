{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@scamshield/scoring": ["packages/scoring/src"],
      "@scamshield/recon": ["packages/recon/src"],
      "@scamshield/playbooks": ["packages/playbooks/src"],
      "@scamshield/ui": ["packages/ui/src"],
      "@/lib/*": ["apps/web/lib/*"],
      "@/components/*": ["apps/web/components/*"]
    }
  }
}
