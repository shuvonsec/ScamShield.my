{
  "manifest_version": 3,
  "name": "ScamShield Checker",
  "version": "0.1.0",
  "description": "Highlight risky links and check with ScamShield.my",
  "permissions": ["contextMenus", "activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
